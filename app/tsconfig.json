{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "data/*": ["./src/data/*"],
      "generated/*": ["./src/generated/*"],
      "pages/*": ["./src/pages/*"],
      "utils/*": ["./src/utils/*"],
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "./node_modules"
  ]
}
